<h4>Add a comment</h4>
<%= form_for comment do |f| %>
  <div class="form-group">
    <%= f.hidden_field :commentable_id, value: comment.commentable_id %>
    <%= f.hidden_field :commentable_type, value: comment.commentable_type %>
    <%= f.label :body, class: 'sr-only' %>
    <%= f.text_field :body, class: 'form-control', placeholder: "Enter a new comment" %>
  </div>
  <%= f.submit "Submit Comment", class: 'btn btn-default pull-right' %>
<% end %>
